<h1>My portfolio</h1>
<div class="searcharea">
    <h3>Search Stock</h3>
    <%= form_tag search_stock_path,remote: true,  method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9">
                <%= text_field_tag :stock, params[:stock], placeholder: "stock ticker symbole", autofocus: true, class: "form-control form-control-lg" %> 

            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= 'Search' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
