<div class="result-block">
 <%= render 'layouts/messages' %>
</div>
<% if @friends %>
<div class="card card-header result-block">
    <table class="table">
        <tbody>
            
            <% @friends.each do |friend| %>
                <tr>
                    <td><strong>First name: </strong> <%= friend.first_name %></td>
                    <td><strong>Last name: </strong> <%= friend.last_name %></td>
                    <td><strong>email: </strong> <%= friend.email %></td>
                    <td><strong> </strong> <%= link_to "view profile",  user_path(friend),
                                                    class: "btn btn-sm btn-primary" %></td>
                        

                    
                    <td>
                        <% if current_user.not_friends_with?(friend.id)%>
                            <%= link_to  "Follow Friend?", friendships_path(friend: friend),
                                            class: "btn btn-sm btn-primary", method: :post %>
                        <% else %>
                                <span class="badge bg-warning">
                                    You are already friends
                                </span>
                        <% end %>
                    </td>    

                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<% end %>