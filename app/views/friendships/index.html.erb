
<h1> My Friends </h1>

<div class="searcharea">
    <h3>Search Stock</h3>
    <%= form_tag  search_friend_path, remote: true,  method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9">
                <%= text_field_tag :friend, params[:friend], placeholder: "Search friends", autofocus: true, class: "form-control form-control-lg" %> 

            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= 'Search' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<div id="result">
    
</div>

 <% if !@my_friends.empty? %>
   <%= render 'friendships/list' %>
<% end %>
